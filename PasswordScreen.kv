# File name: PasswordScreen.kv
#: import CheckBox kivy.uix.checkbox


<EnigmaLabel>:
    color: 0.9,0.9,0.9,1.0
    font_size: 20
    border_color: [1,1,1,1]
    canvas.before:
        Color: 
            rgba: .3, .3, .3, .8
        Rectangle:
            pos: self.pos
            size: self.size
            

<EnigmaEntry>:
    size_hint_y:None
    loop:True
    size_hint_y: None
    size_hint_x: None
    size: 260, 40
    direction:'right'
    on_index: self.enigma_layout.check_password()


<PasswordScreen@Screen>:
    name: 'password_screen'

    #=======================================================
    # Define the screen background
    #=======================================================
    canvas.before:
        Color:
            rgba: C('efd593ff')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        minimum_width: 300
        size_hint: 1, 1
        padding: [5,5,5,5]

        #===================================================
        # Left:
        #===================================================
        BoxLayout:
            orientation: 'vertical'
            size: 190, 470
            size_hint: None, None
            spacing: 20

            #===============================================
            # Back-to-player button
            #===============================================
            Button:
                text: 'Go Back'
                font_name: 'Bungee'
                font_size: 20
                bold: True
                color: C('fbf5e7ff')
                on_press: root.show_main_screen()
                background_normal: 'img/button.png'
                background_down: 'img/button.png'
                size_hint: None, None 
                size: 100, 50

        #===================================================
        # Right: Password enigma
        #===================================================
        EnigmaLayout:
            id: enigma_layout
            height: self.minimum_height
            cols: 1
            spacing: 15
            size_hint_y: None
            size_hint_x: None
            pos_hint: {'center_x':0.75, 'center_y':0.5}
            size: 360, 440

